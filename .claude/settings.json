{
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "300000",
    "BASH_MAX_TIMEOUT_MS": "600000",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
    "UV_THREADPOOL_SIZE": "8",
    "BASH_MAX_OUTPUT_LENGTH": "50000"
  },
  "permissions": {
    "deny": [
      "Bash(nodemon:*)",
      "Bash(vite *--watch*)",
      "Bash(ts-node-dev:*)",
      "Bash(npm run dev:*)",
      "Bash(chokidar:*)",
      "Bash(fs.watch:*)"
    ],
    "allow": [
      "Bash(npm test*)",
      "Bash(python test*)",
      "Bash(python -m pytest*)",
      "Bash(node *)",
      "Bash(npx kill-port:*)",
      "Bash(lsof:*)",
      "Bash(ps:*)",
      "Bash(pkill:*)",
      "Bash(tasklist:*)",
      "Bash(taskkill:*)",
      "Bash(netstat:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      { "hooks": [ { "type": "command", "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/cleanup.sh", "timeout": 15 } ] }
    ],
    "PreToolUse": [
      { "matcher": "Bash", "hooks": [ { "type": "command", "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/cleanup.sh", "timeout": 15 } ] }
    ],
    "Stop": [
      { "hooks": [ { "type": "command", "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/cleanup.sh", "timeout": 15 } ] }
    ]
  }
}