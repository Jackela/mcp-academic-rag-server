# MCP Academic RAG Server - Simplified Configuration
# Copy this file to .env and fill in your actual values

# ===========================
# Core MCP Server Settings
# ===========================
# MCP server host and port
MCP_HOST=0.0.0.0
MCP_PORT=8000
# Environment: development, production
ENVIRONMENT=development
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ===========================
# Storage Configuration
# ===========================
# Base path for data storage (local only)
DATA_PATH=./data
# Vector store type (faiss for local)
VECTOR_STORE=faiss

# ===========================
# API Keys
# ===========================
# OpenAI API Key (required for LLM)
OPENAI_API_KEY=your-openai-api-key-here

# ===========================
# Document Processing
# ===========================
# OCR language (eng, chi_sim, etc.)
OCR_LANGUAGE=eng
# Text chunking settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ===========================
# Optional: Documents Path
# ===========================
# Path to documents for bulk processing
DOCUMENTS_PATH=./documents