# Environment Variables for MCP Academic RAG Server
# Rename this file to .env and fill in your API keys
# 将此文件重命名为 .env 并填入你的 API 密钥

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY="YOUR_ANTHROPIC_API_KEY_HERE"

# OpenAI API Key (for GPT models and embeddings)
OPENAI_API_KEY="YOUR_OPENAI_API_KEY_HERE"

# Google API Key (optional, for Google AI models)
GOOGLE_API_KEY="YOUR_GOOGLE_API_KEY_HERE"

# Configuration
MCP_SERVER_MODE="development"
MCP_LOG_LEVEL="INFO"

# Vector Store Configuration
VECTOR_STORE_TYPE="faiss"
VECTOR_STORE_PATH="./data/faiss"

# Server Configuration
SERVER_HOST="localhost"
SERVER_PORT="8000"

# Storage paths
DATA_PATH="./data"
LOGS_PATH="./logs"
TEMP_PATH="./temp"

# Processing Configuration
EMBEDDING_MODEL="sentence-transformers/all-MiniLM-L6-v2"
OCR_LANGUAGE="eng"
CHUNK_SIZE="1000"
CHUNK_OVERLAP="200"

# RAG Configuration
TOP_K_RESULTS="5"
SIMILARITY_THRESHOLD="0.7"
MAX_CONTEXT_LENGTH="4000"

# Security Configuration
ENABLE_CORS="true"
CORS_ORIGINS="*"
RATE_LIMIT="100"

# Performance Configuration
MAX_WORKERS="4"
CACHE_SIZE="1000"
CACHE_TTL="3600"