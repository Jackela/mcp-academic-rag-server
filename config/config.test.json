{
  "server": {
    "name": "academic-rag-server-test",
    "version": "1.0.0-test",
    "port": 8002,
    "debug": true,
    "test_mode": true
  },
  
  "vector_db": {
    "type": "memory",
    "vector_dimension": 384,
    "similarity": "dot_product",
    "memory": {
      "return_embedding": true,
      "persist_documents": false
    }
  },
  
  "llm": {
    "provider": "openai",
    "model": "gpt-3.5-turbo",
    "parameters": {
      "temperature": 0.1,
      "max_tokens": 500,
      "top_p": 0.9
    },
    "timeout": 60,
    "retry_attempts": 3
  },
  
  "processing": {
    "embedding": {
      "batch_size": 1,
      "chunk_size": 512,
      "chunk_overlap": 50
    },
    "ocr": {
      "language": "eng",
      "timeout": 30
    }
  },
  
  "logging": {
    "level": "INFO",
    "format": "structured", 
    "file_enabled": true,
    "max_size_mb": 10,
    "test_logging": true
  },
  
  "session": {
    "max_history_length": 3,
    "timeout_minutes": 10
  },
  
  "testing": {
    "api_timeout": 60,
    "max_retries": 2,
    "test_documents_path": "./test-documents/",
    "output_path": "./test_reports/regression/"
  }
}