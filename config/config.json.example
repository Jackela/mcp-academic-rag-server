{
  "server": {
    "name": "academic-rag-server",
    "version": "1.0.0",
    "port": 8000
  },
  
  "mcp": {
    "tools_enabled": [
      "process_document",
      "query_documents", 
      "get_document_info",
      "list_sessions"
    ]
  },
  
  "storage": {
    "type": "local",
    "vector_store": "faiss",
    "base_path": "./data",
    "index_name": "academic_documents"
  },
  
  "processing": {
    "ocr": {
      "enabled": true,
      "engine": "tesseract",
      "language": "eng"
    },
    
    "embedding": {
      "model": "sentence-transformers/all-MiniLM-L6-v2",
      "chunk_size": 1000,
      "chunk_overlap": 200,
      "batch_size": 4
    }
  },
  
  "rag": {
    "retrieval": {
      "top_k": 5,
      "similarity_threshold": 0.7
    },
    
    "generation": {
      "llm_provider": "openai",
      "model": "gpt-3.5-turbo",
      "temperature": 0.1,
      "max_tokens": 500
    }
  },
  
  "session": {
    "max_history_length": 10,
    "timeout_minutes": 30,
    "storage": "memory"
  },
  
  "logging": {
    "level": "INFO",
    "format": "structured",
    "file_enabled": true,
    "max_size_mb": 10
  }
}